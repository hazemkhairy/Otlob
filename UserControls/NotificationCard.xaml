<UserControl x:Class="otlob.UserControls.NotificationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:otlob.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="720">
    <StackPanel Orientation="Horizontal" Background="White" Margin="5" x:Name="notificationCardPanel">
        <Image x:Name="RestaurantImageBox" Stretch="Uniform" Width="200" />
        <TextBlock HorizontalAlignment="Center" FontSize="40" VerticalAlignment="Center" x:Name="RestaurantNameTextBlock" Width="200" Margin="0,48,0,48.4"/>
        <ScrollViewer  CanContentScroll="True">
            <TextBlock TextWrapping="Wrap" FontSize="20" x:Name="NotificationDateTextBlock" Height="auto" Width="300" />
        </ScrollViewer>
    </StackPanel>
</UserControl>
